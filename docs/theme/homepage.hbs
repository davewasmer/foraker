        <div class='hero'>
          <div class='hero-container'>
            <div class='project'>
              <h1 class='project-name'>{{project.name}}</h1>
              <p class='description'>{{project.description}}</p>
              <div class='links'>
                <a href='https://github.com/davewasmer/{{project.name}}/' title='davewasmer/{{project.name}}'>Github Repo</a>
              </div>
            </div>
            <div class='example light'>
              <pre><code class="lang-js"><span class="hljs-comment">// controllers/posts.js</span>
<span class="hljs-keyword">import</span> Controller <span class="hljs-keyword">from</span> <span class="hljs-string">'foraker'</span>;

<span class="hljs-keyword">export</span> <span class="hljs-keyword">default</span> Controller.extend({

  filters() {
    <span class="hljs-comment">// Run the authenticate function (that is defined on</span>
    <span class="hljs-comment">// this controller) before any action for this controller</span>
    <span class="hljs-comment">// runs.</span>
    <span class="hljs-keyword">this</span>.before(<span class="hljs-string">'authenticate'</span>);
  },

  <span class="hljs-comment">// The posts.update action takes the incoming request body</span>
  <span class="hljs-comment">// and updates the matching post record.</span>
  update(req, res) {
    <span class="hljs-keyword">return</span> Post.update(req.params.id, req.body)
    .then((post) =&gt; {
      res.json(post);
    });
  },

  authenticate(req, res) {
    <span class="hljs-keyword">if</span> (req.headers[<span class="hljs-string">'Authorization'</span>] !== <span class="hljs-string">'Secret Password'</span>) {
      <span class="hljs-comment">// Thrown errors will be caught, and passed into next()</span>
      <span class="hljs-keyword">throw</span> <span class="hljs-keyword">new</span> <span class="hljs-built_in">Error</span>(<span class="hljs-string">'Unauthorized!'</span>);
    }
  }

});
</code></pre>
            </div>
          </div>
        </div>
        {{> header}}
        <div class='container'>
          {{{html}}}
        </div>

