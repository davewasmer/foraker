<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{{#if page.title}}{{page.title}} | {{/if}}{{project.name}}</title>
        {{#if build.ghPages}}
          <base href="/{{project.name}}/">
        {{else}}
          <base href="/">
        {{/if}}
        <meta name="description" content="">
